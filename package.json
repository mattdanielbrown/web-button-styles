{
	"name": "web-button-styles",
	"version": "3.3.1",
	"description": "CSS and SCSS base styles for buttons, distributed as an NPM package.",
	"license": "MIT",
	"repository": "mattdanielbrown/web-button-styles",
	"author": {
		"name": "Matt Daniel Brown",
		"email": "developer@mattdanielbrown.com",
		"url": "https://mattbrown.codes"
	},
	"engines": {
		"node": ">=10"
	},
	"main": "_web-button-styles.scss",
	"style": "web-button-styles.min.css",
	"scripts": {
		"compile-sass-unminified": "sass ./src/_web-button-styles.scss web-button-styles.css",
		"autoprefix": "postcss web-button-styles.css --use autoprefixer -b 'last 4 versions' -o web-button-styles.css",
		"minify-css": "sass --style=compressed web-button-styles.css web-button-styles.min.css",
		"build": "npm run-script compile-sass-unminified && npm run-script autoprefix && npm run-script minify-css",
		"start": "sass _web-button-styles.scss web-button-styles.css --watch",
		"open-test-page": "open test.html",
		"testing": "npm run-script build && npm run-script open-test-page && npm run-script start",
		"test": "npm run-script build"
	},
	"files": [
		"_web-button-styles.scss",
		"web-button-styles.css",
		"web-button-styles.min.css"
	],
	"keywords": [
		"scss",
		"css",
		"style",
		"button",
		"buttons",
		"frontend"
	],
	"devDependencies": {
		"autoprefixer": "^10.4.4",
		"postcss": "^8.4.12",
		"postcss-cli": "^9.1.0",
		"postcss-scss": "^4.0.3",
		"sass": "^1.50.1"
	},
	"dependencies": {
		"bourbon": "^7.2.0",
		"inter-ui": "^3.19.3",
		"mobi.css": "^3.1.1",
		"modern-normalize": "^1.1.0",
		"np": "^7.6.1",
		"sanitize.css": "^13.0.0"
	},
	"publishConfig" : {
		"access" : "public"
	}
}
